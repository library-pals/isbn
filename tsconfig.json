{
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "strict": true,
    "target": "es2022",
    "useUnknownInCatchVariables": false,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*.js"],
  "exclude": ["**/*.d.ts"]
}
